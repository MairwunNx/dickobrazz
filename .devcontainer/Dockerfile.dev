FROM golang:1.25-bookworm

WORKDIR /workspace

RUN --mount=type=cache,target=/var/cache/apt,sharing=locked \
    --mount=type=cache,target=/var/lib/apt/lists,sharing=locked \
    apt-get update && export DEBIAN_FRONTEND=noninteractive \
    && apt-get -y install --no-install-recommends \
    git \
    build-essential \
    pkg-config \
    ca-certificates \
    curl \
    wget \
    bash \
    && apt-get clean -y

ENV CGO_ENABLED=1 \
    GOMODCACHE=/go/pkg/mod \
    GOCACHE=/home/devuser/.cache/go-build

RUN groupadd --gid 1000 devuser \
    && useradd --uid 1000 --gid devuser --shell /bin/bash --create-home devuser \
    && mkdir -p /go/bin /go/pkg/mod /home/devuser/.cache/go-build \
    && chown -R devuser:devuser /go /home/devuser/.cache

USER devuser

RUN --mount=type=cache,target=/go/pkg/mod,sharing=locked \
    --mount=type=cache,target=/home/devuser/.cache/go-build,sharing=locked \
    go install github.com/air-verse/air@latest && \
    curl -sSfL https://raw.githubusercontent.com/golangci/golangci-lint/master/install.sh | sh -s -- -b /go/bin v1.64.6

CMD ["sleep", "infinity"]